{
    "manifest_version": 2,
  
    "name": "say hello",
    "description": "This extension will greet a user when button clicked",
    "version": "1.0",
  
    "background": {
         "scripts": ["popup.js"]
        }, 
    "browser_action": {
     "default_icon": "time.png",
     "default_popup": "popup.html"
    },
    "content_scripts": [{
        "css": ["style.css"],
        "matches": [
            "<all_urls>"
          ]
      }], 
    "permissions": [
     "activeTab"
     ]
  }